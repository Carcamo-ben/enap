{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "synapseWorkspaceName": "YOUR_SYNAPSE_WORKSPACE_NAME",
    "synapseSku": "Standard" // Or "Premium"
  },
  "resources": [
    {
      "apiVersion": "2019-06-01-preview",
      "type": "Microsoft.Resources/resourceGroups",
      "name": "synapse trial",
      "location": "eastus2",
      "properties": {}
    },
    {
      "apiVersion": "2021-06-01-preview",
      "name": "[variables('synapseWorkspaceName')]",
      "type": "Microsoft.Synapse/workspaces",
      "location": "eastus2",
      "sku": {
        "name": "[variables('synapseSku')]"
      },
      "properties": {
        // Optional properties can be added here, such as:
        // "managedVirtualNetwork": {
        //   "type": "Managed"
        // },
        // "virtualNetworkProfile": {
        //   "subnetId": "YOUR_SUBNET_ID"
        // }
      },
      "resources": [],
      "dependsOn": [
        "synapse trial"
      ]
    }
  ],
  "outputs": {
    "workspaceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))]"
    }
  }
}
